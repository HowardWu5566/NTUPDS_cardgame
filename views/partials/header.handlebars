<header>
  <div class="flex-container">
    <a href="/" title="回首頁" id="header-logo">
      <img src="https://i.imgur.com/VeMzxQj.png" alt="logo" id="header-logo">
    </a>

    <div>
      <button class="dropdown-btn" type="button" onclick="showSocialMedias()">
        關於臺大布研
      </button>
      <ul class="dropdown-menu ">
        <li><a class="socialmedia transparent-btn hidden" href="#"><i class="fa-brands fa-facebook" style="color: #0866FF;"></i>  Facebook</a></li>
        <li><a class="socialmedia transparent-btn hidden" href="#"><i class="fa-brands fa-instagram" style="color: #E1306C;"></i>  Instagram</a></li>
        <li><a class="socialmedia transparent-btn hidden" href="#"><i class="fa-brands fa-youtube" style="color: #FF0000;"></i>  YouTube</a></li> 
      </ul>
    </div>
  </div>
</header>

<script>
  function showSocialMedias() {
    const socialMediaBtns = document.querySelectorAll('.socialmedia')
    socialMediaBtns.forEach(button => {
      button.classList.toggle('hidden')
    })
  }
</script>